---
import Container from "@components/container.astro";
import { Astronav, MenuIcon, MenuItems } from "astro-navbar";
import { FaCog } from "react-icons/fa";

const { content } = Astro.props;
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center mt-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg flex items-center">
          {
            content.logo.src && (
              <img
                src={content.logo.src}
                alt={content.logo.alt}
                class="w-12 h-12 mr-2"
              />
            )
          }
          <span class="font-bold text-slate-800">
            {content.mainText && <>{content.mainText}</>}
            {
              content.secondaryText && (
                <span class="text-slate-500">{content.secondaryText}</span>
              )
            }
          </span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          <li>
            <a
              href="/controlPanel"
              class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
              <FaCog
                className="w-5 h-5 text-slate-100 hover:text-slate-400"
                aria-label="Control Panel"
              />
            </a>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>
