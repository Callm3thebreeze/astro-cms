---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import AdminPage from "@components/controlPanel/AdminPage.jsx";

const DATABASE_ID = import.meta.env.PUBLIC_DATABASE_ID;
const PUBLIC_NAVBARFOOTER_COLLECTION_ID = import.meta.env
  .PUBLIC_NAVBARFOOTER_COLLECTION_ID;
const PUBLIC_NAVBARFOOTER_DOCUMENT_ID = import.meta.env
  .PUBLIC_NAVBARFOOTER_DOCUMENT_ID;
const INFOBLOCK_COLLECTION_ID = import.meta.env.PUBLIC_INFOBLOCK_COLLECTION_ID;
const FEATURES_COLLECTION_ID = import.meta.env.PUBLIC_FEATURES_COLLECTION_ID;
const BUCKET_ID = import.meta.env.PUBLIC_BUCKET_ID;
---

<Layout title="">
  <Container>
    <AdminPage
      DATABASE_ID={DATABASE_ID}
      INFOBLOCK_COLLECTION_ID={INFOBLOCK_COLLECTION_ID}
      FEATURES_COLLECTION_ID={FEATURES_COLLECTION_ID}
      PUBLIC_NAVBARFOOTER_COLLECTION_ID={PUBLIC_NAVBARFOOTER_COLLECTION_ID}
      PUBLIC_NAVBARFOOTER_DOCUMENT_ID={PUBLIC_NAVBARFOOTER_DOCUMENT_ID}
      BUCKET_ID={BUCKET_ID}
      client:load
    />
  </Container>
</Layout>
