---
import Container from "@components/container.astro";
import Features from "@components/features.astro";
import Layout from "../layouts/Layout.astro";
import Infoblock from "@components/infoblock.astro";
import Cta from "@components/cta.astro";
import Logos from "@components/logos.astro";
import { head, blocks } from "@content/infoBlocks.js";
import { features } from "@content/features.js";
---

<Layout title="Astro CMS">
  <Container>
    <Infoblock content={head} />
    {features.map((item, index) => <Features content={item} key={index} />)}
    {blocks.map((block, index) => <Infoblock content={block} key={index} />)}
    <Logos />
    <Cta />
  </Container>
</Layout>
